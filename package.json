{
  "name": "clockie",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "ios": "cd apps/native && npx expo run:ios",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @clockie/backend dev",
    "dev:setup": "turbo -F @clockie/backend dev:setup",
    "ci:check-ui": "pnpm --filter @clockie/ui build",
    "check:tamagui-singleton": "node scripts/check-tamagui-singleton.mjs"
  },
  "dependencies": {
    "@clockie/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@clockie/config": "workspace:*",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "onlyBuiltDependencies": ["electron", "esbuild"],
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0"
    }
  }
}
